#:kivy 2.2.1

<HomeScreen>:

    Image:
        source: PATH_CHARACTERS_IMAGES + "full_olympe.png"
        size_hint: (None, 0.6)
        width: root.height*self.size_hint[1]*333/500
        pos_hint: {"y": 0}
        x: -0.12*self.width
        fit_mode: "cover"

    PressedButton:
        text: root.play_label
        size_hint: (0.5, 0.1)
        pos_hint: {"center_x": 0.5, "center_y": 0.7}
        font_ratio: root.font_ratio
        release_function: root.go_to_save

    PressedButton:
        text: "GO TO COMPETITION INSCRIPTIONS"
        size_hint: (0.5, 0.1)
        pos_hint: {"center_x": 0.5, "center_y": 0.1}
        font_ratio: root.font_ratio
        release_function: root.go_to_competition_inscriptions

    PressedButton:
        text: "GO TO COMPETITION RESULTS"
        size_hint: (0.5, 0.1)
        pos_hint: {"center_x": 0.5, "center_y": 0.9}
        font_ratio: root.font_ratio
        release_function: root.go_to_competition_results

    IconPressedButton:
        icon_source: PATH_ICONS + "settings.png"
        size_hint: (None, ICON_BUTTON_SIZE)
        width: self.height
        pos_hint: POS_HINT_RIGHT_BOTTOM_BUTTON
        font_ratio: root.font_ratio
        size_hint_y_icon: 0.6
        release_function: root.go_to_settings
