#:kivy 2.2.1

<HomeScreen>:

    PressedButton:
        text: root.play_label
        size_hint: (0.5, 0.1)
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        font_ratio: root.font_ratio
        release_function: root.go_to_dialog

    IconPressedButton:
        icon_source: PATH_ICONS + "settings.png"
        size_hint: (None, ICON_BUTTON_SIZE)
        width: self.height
        pos_hint: POS_HINT_RIGHT_BOTTOM_BUTTON
        font_ratio: root.font_ratio
        size_hint_y_icon: 0.6
        release_function: root.go_to_settings
