#:kivy 2.2.1

<DialogScreen>:

    DialogLayout:
        id: dialog_layout
        size_hint: (0.9, 0.575)
        pos_hint: {"center_x": 0.5, "y": 0.025}
        font_ratio: root.font_ratio

    IconPressedButton:
        id: skip_dialog_button
        icon_source: PATH_ICONS + "skip.png"
        disable_button: not root.dev_mode
        opacity: 1 if root.dev_mode else 0
        release_function: root.skip_dialog
        size_hint: (None, ICON_BUTTON_SIZE)
        width: self.height
        pos_hint: POS_HINT_RIGHT_TOP_BUTTON
        font_ratio: root.font_ratio
