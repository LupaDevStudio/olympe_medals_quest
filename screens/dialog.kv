#:kivy 2.2.1

<DialogScreen>:

    DialogLayout:
        size_hint: (0.9, 0.45)
        pos_hint: {"center_x": 0.5, "y": ICON_BUTTON_SIZE + 0.05}
        font_ratio: root.font_ratio
        character_name: root.character_name
        character_title: root.character_title
        character_image: root.character_image
        text: root.dialog_text_label

    IconPressedButton:
        icon_source: PATH_ICONS + "right_arrow.png"
        size_hint: (None, ICON_BUTTON_SIZE)
        width: self.height
        pos_hint: POS_HINT_RIGHT_BOTTOM_BUTTON
        font_ratio: root.font_ratio
        release_function: root.pass_current_frame
