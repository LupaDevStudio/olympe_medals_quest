#:kivy 2.2.1

<DialogScreen>:

    DialogLayout:
        id: dialog_layout
        size_hint: (0.9, 0.475)
        pos_hint: {"center_x": 0.5, "y": ICON_BUTTON_SIZE + 0.05}
        font_ratio: root.font_ratio

    IconPressedButton:
        icon_source: PATH_ICONS + "right_arrow.png"
        size_hint: (None, ICON_BUTTON_SIZE)
        width: self.height
        pos_hint: POS_HINT_RIGHT_BOTTOM_BUTTON
        font_ratio: root.font_ratio
        release_function: root.pass_current_frame
