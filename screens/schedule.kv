#:kivy 2.2.1

<ScheduleScreen>:

    OlympeCard:
        pos_hint: {"center_x":0.5, "y": BOTTOM_BAR_HEIGHT + 0.025}
        size_hint: (SCROLLVIEW_WIDTH, 0.95 - TOP_BAR_HEIGHT - BOTTOM_BAR_HEIGHT)
        header_mode: True
        header_text: root.header_text
        font_ratio: root.font_ratio
        money_mode: True
        money_amount: root.spent_coins_for_athlete
        money_minus_mode: root.spent_coins_for_athlete > 0
        money_plus_mode: root.spent_coins_for_athlete < 0
        money_size_hint: (0.3, 0.65)


        ### Activities ###

        SurroundedLabel:
            id: first_activity
            text: "Act 1 TODO"
            font_ratio: root.font_ratio
            size_hint: (0.55, 0.075)
            pos_hint: {"x": 0.05}
            y: 4*MARGIN_HEIGHT*root.font_ratio + 2*self.height

        PressedButton:
            id: first_activity_button
            text: root.change_text
            size_hint: (0.3, 0.075)
            font_ratio: root.font_ratio
            y: first_activity.y
            pos_hint: {"x": 0.65}
            release_function: root.change_first_activity

        SurroundedLabel:
            id: second_activity
            text: "Act 2 TODO"
            font_ratio: root.font_ratio
            size_hint: first_activity.size_hint
            x: first_activity.x
            y: 3*MARGIN_HEIGHT*root.font_ratio + self.height

        PressedButton:
            text: root.change_text
            size_hint: first_activity_button.size_hint
            font_ratio: root.font_ratio
            y: second_activity.y
            pos_hint: first_activity_button.pos_hint
            release_function: root.change_second_activity

        SurroundedLabel:
            id: third_activity
            text: "Act 3 TODO"
            font_ratio: root.font_ratio
            size_hint: first_activity.size_hint
            x: first_activity.x
            y: 2*MARGIN_HEIGHT*root.font_ratio

        PressedButton:
            text: root.change_text
            size_hint: first_activity_button.size_hint
            font_ratio: root.font_ratio
            y: third_activity.y
            pos_hint: first_activity_button.pos_hint
            release_function: root.change_third_activity

    PressedButton:
        text: root.validate_label
        size_hint: (0.4, BUTTON_BOTTOM_BAR_HEIGHT*BOTTOM_BAR_HEIGHT)
        pos_hint: {"center_x": 0.5, "y": 0.025/2+(1-BUTTON_BOTTOM_BAR_HEIGHT)/2*BOTTOM_BAR_HEIGHT}
        font_ratio: root.font_ratio
        release_function: root.validate_planning
