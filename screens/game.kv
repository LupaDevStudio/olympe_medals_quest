#:kivy 2.2.1

<GameScreen>:

    ### Name of the country ###

    RelativeLayout:
        canvas.before:
            Color:
                rgba: COLORS.transparent_black
            Rectangle:
                pos: (0, 0)
                size: self.size

        pos_hint: {"center_x": 0.5, "y": 0.8}
        size_hint: (0.7, 0.08)

        Label:
            text: root.our_country_label
            font_size: root.font_ratio * FONTS_SIZES.subtitle
            pos_hint: {"x": 0.075, "center_y": 0.5}
            size_hint: (1, 1)
            shorten: False
            text_size: self.size
            font_name: PATH_TITLE_FONT
            halign: "left"
            valign: "middle"
            line_height: 1
            color: COLORS.white

        FramedImage:
            image_source: PATH_FLAGS_IMAGES + "our_country.png"
            pos_hint: {"right": 0.925, "center_y": 0.5}
            size_hint: (None, 0.65)
            width: 1.73*self.height # Image ratio of the flags
            font_ratio: root.font_ratio

    ### List of actions allowed ###

    GridLayout:
        canvas.before:
            Color:
                rgba: COLORS.transparent_black
            Rectangle:
                pos: self.pos
                size: self.size

        id: grid_layout
        cols: 2
        pos_hint: {"center_x": 0.5, "y": 0.325}
        spacing: 0.05*root.width
        padding: 0.05*root.width

    ### Characters ###

    CharacterButtonWithIcon:
        id: olympe_button
        image_source: PATH_CHARACTERS_IMAGES + "olympe_face_neutral.png"
        icon_mode: root.has_notifications_olympe
        icon_flashing_mode: root.has_notifications_olympe
        size_hint: (None, 0.15)
        width: self.height
        pos_hint: {"x": 0.1, "y": 0.15}
        font_ratio: root.font_ratio
        release_function: root.launch_dialog_olympe

    CharacterButtonWithIcon:
        id: minister_button
        image_source: PATH_CHARACTERS_IMAGES + "minister_face_neutral.png"
        icon_mode: root.has_notifications_minister
        icon_flashing_mode: root.has_notifications_minister
        size_hint: (None, 0.15)
        width: self.height
        pos_hint: {"right": 0.9, "y": 0.15}
        font_ratio: root.font_ratio
        release_function: root.launch_dialog_minister

    ### Main action button ###

    PressedButton:
        text: root.launch_main_action_label
        size_hint: (0.7, 0.07)
        pos_hint: {"center_x": 0.5, "y": 0.04}
        font_ratio: root.font_ratio
        font_size: FONTS_SIZES.big_button
        disable_button: root.has_notifications_olympe or root.has_notifications_minister
        release_function: root.launch_main_action
