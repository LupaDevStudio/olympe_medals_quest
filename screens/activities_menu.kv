#:kivy 2.2.1

<ActivitiesMenuScreen>:

    OlympeCard:
        id: categories_card
        header_mode: True
        header_text: root.categories_title
        pos_hint: {"center_x":0.5, "top": 0.975 - TOP_BAR_HEIGHT}
        size_hint: (SCROLLVIEW_WIDTH, None)
        font_ratio: root.font_ratio
        height: root.font_ratio*(HEADER_HEIGHT+3*MARGIN) + 2*(root.width*SCROLLVIEW_WIDTH-6*MARGIN*root.font_ratio)/5

        GridLayout:
            id: categories_layout
            cols: 5
            spacing: MARGIN*root.font_ratio
            padding: MARGIN*root.font_ratio
            pos_hint: {"center_x": 0.5, "y": 0}
            size_hint: (1, None)
            height: self.parent.height-HEADER_HEIGHT*root.font_ratio
