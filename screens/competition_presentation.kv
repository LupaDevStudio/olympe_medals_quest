#:kivy 2.2.1

<CompetitionPresentationScreen>:

    RelativeLayout:
        size_hint: (0.8, 0.3)
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        canvas.before:
            Color:
                rgba: COLORS.transparent_black
            Rectangle:
                pos: 0, 0
                size: self.size

        # Dialog content
        Label:
            text: root.text
            x: 2*MARGIN*root.font_ratio
            y: 2*MARGIN*root.font_ratio
            size_hint: (None, None)
            width: self.parent.width - 4*MARGIN*root.font_ratio
            height: self.parent.height - 4*MARGIN*root.font_ratio
            font_name: PATH_TEXT_FONT
            font_size: root.font_ratio*FONTS_SIZES.subtitle
            color: COLORS.white
            text_size: self.size
            halign: "left"
            valign: "top"

    IconPressedButton:
        id: skip_dialog_button
        icon_source: PATH_ICONS + "skip.png"
        disable_button: not root.dev_mode
        opacity: 1 if root.dev_mode else 0
        release_function: root.finish_presentation
        size_hint: (None, ICON_BUTTON_SIZE)
        width: self.height
        pos_hint: POS_HINT_RIGHT_TOP_BUTTON
        font_ratio: root.font_ratio
