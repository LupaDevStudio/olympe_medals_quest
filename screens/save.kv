#:kivy 2.2.1

<SaveScreen>:

    PressedButton:
        text: "test"
        size_hint: (0.4, BUTTON_BOTTOM_BAR_HEIGHT*BOTTOM_BAR_HEIGHT)
        pos_hint: {"center_x": 0.5, "y": 0.5}
        font_ratio: root.font_ratio
        release_function: root.launch_game

    PressedButton:
        text: root.new_game_label
        size_hint: (0.4, BUTTON_BOTTOM_BAR_HEIGHT*BOTTOM_BAR_HEIGHT)
        pos_hint: {"center_x": 0.5, "y": 0.025/2+(1-BUTTON_BOTTOM_BAR_HEIGHT)/2*BOTTOM_BAR_HEIGHT}
        font_ratio: root.font_ratio
        release_function: root.ask_start_new_game
        disable_button: not root.can_start_new_game
