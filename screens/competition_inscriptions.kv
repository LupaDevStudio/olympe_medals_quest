#:kivy 2.2.1

<CompetitionInscriptionsScreen>:

    OlympeCard:
        pos_hint: {"center_x":0.5, "top": 1 - TOP_BAR_HEIGHT - LARGE_LINE_WIDTH/(root.height+1)}
        size_hint: (1, TOP_BAR_HEIGHT)
        header_mode: True
        header_height: TOP_BAR_HEIGHT*root.height
        background_color: COLORS.dark_transparent_black
        line_width: LARGE_LINE_WIDTH

        CustomScrollview:
            id: scrollview_vertical
            bar_width: 5*root.font_ratio
            bar_color: COLORS.blue_olympe
            bar_inactive_color: COLORS.blue_pressed_olympe
            size_hint: (1, 0.85)
            pos_hint: {"center_y": 0.5}
            do_scroll_y: False
            do_scroll_x: True

            MyScrollViewVerticalLayout:
                id: scrollview_layout_vertical
                rows: 1
                spacing: (10*root.font_ratio, 10*root.font_ratio)
                padding: (10*root.font_ratio, 0, 10*root.font_ratio, 0)

    OlympeCard:
        pos_hint: {"center_x":0.5, "y": BOTTOM_BAR_HEIGHT + 0.025}
        size_hint: (SCROLLVIEW_WIDTH, 0.95 - 2*TOP_BAR_HEIGHT - BOTTOM_BAR_HEIGHT)
        header_mode: True

        CustomScrollview:
            id: scrollview
            bar_width: 5*root.font_ratio
            bar_color: COLORS.blue_olympe
            bar_inactive_color: COLORS.blue_pressed_olympe
            size_hint: (1, None)
            height: self.parent.height - HEADER_HEIGHT*root.font_ratio - SCROLL_VIEW_SPACING_VERTICAL*root.font_ratio

            MyScrollViewLayout:
                id: scrollview_layout
                cols: 1
                spacing: (10*root.font_ratio, 10*root.font_ratio)
                padding: (10*root.font_ratio, 5*root.font_ratio, 10*root.font_ratio, SCROLL_VIEW_SPACING_VERTICAL*root.font_ratio)

    PressedButton:
        id: previous_button
        size_hint: ((SCROLLVIEW_WIDTH-(1-SCROLLVIEW_WIDTH)/2)/2, BUTTON_BOTTOM_BAR_HEIGHT*BOTTOM_BAR_HEIGHT)
        pos_hint: {"x": (1-SCROLLVIEW_WIDTH)/2, "y": 0.025/2+(1-BUTTON_BOTTOM_BAR_HEIGHT)/2*BOTTOM_BAR_HEIGHT}
        font_ratio: root.font_ratio
        release_function: root.go_to_previous_sport

    PressedButton:
        id: next_button
        size_hint: ((SCROLLVIEW_WIDTH-(1-SCROLLVIEW_WIDTH)/2)/2, BUTTON_BOTTOM_BAR_HEIGHT*BOTTOM_BAR_HEIGHT)
        pos_hint: {"right": 1-(1-SCROLLVIEW_WIDTH)/2, "y": 0.025/2+(1-BUTTON_BOTTOM_BAR_HEIGHT)/2*BOTTOM_BAR_HEIGHT}
        font_ratio: root.font_ratio
        release_function: root.go_to_next_sport
