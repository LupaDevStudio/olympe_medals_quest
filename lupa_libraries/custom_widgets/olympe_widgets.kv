        height: first_activity.height
        x: 0.1*root.width + character.width
        y: MARGIN*2*root.font_ratio + planning_button.height

    # Planning button
    PressedButton:
        id: planning_button
        text: root.planning_text
        size_hint: (None, None)
        width: first_activity.width
        height: SKILL_HEIGHT * root.font_ratio
