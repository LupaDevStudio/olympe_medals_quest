#:kivy 2.2.1



<LoadingPopup>:
    
    RelativeLayout:
        id: popup_layout
        
        Label:
            id: center_label
            # size_hint: (0.8,0.7)
            pos_hint: {"center_x":0.5,"center_y":0.1}
            font_size: 20 * root.font_ratio
            font_name: PATH_TEXT_FONT
            text: root.center_text
            color: (0,0,0,1)
            halign: "center"
            valign: "middle"

        RelativeLayout:
            size_hint: (0.7, 0.6)
            pos_hint: {"center_x":0.5, "center_y": 0.6}

            canvas.before:
                PushMatrix
                Rotate:
                    angle: root.angle
                    axis: 0, 0, 1
                    origin: self.width/2, self.height/2
            canvas.after:
                PopMatrix

            Image:
                id: loading_image
                source: PATH_IMAGES + "loading.png"
                size_hint: (1, 1)
                pos_hint: {'center_x': 0.5, "center_y": 0.5}
