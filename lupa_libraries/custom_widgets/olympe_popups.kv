<OlympeSpinnerPopup>:

    FloatLayout:
        id: popup_layout
        size_hint: root.popup_size_hint

        Label:
            id: popup_label
            text: root.text
            size_hint: (1, None)
            pos_hint: {"center_x": 0.5}
            height: root.height - confirm_button.height - 5*MARGIN*root.font_ratio - HEADER_HEIGHT*root.font_ratio - spinner.height
