            size_hint: (0.4, None)
            height: BUTTON_HEIGHT*root.font_ratio
            pos_hint: {"center_x": 0.5}
            y: confirm_button.y + confirm_button.height + 2*MARGIN*root.font_ratio
            font_ratio: root.font_ratio

        PressedButton:
            id: confirm_button
            text: root.button_text
            size_hint: (0.4, None)
